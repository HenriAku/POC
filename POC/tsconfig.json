{
	"compilerOptions": {
	  "target": "es6",                         // Compilation vers ES6
	  "module": "esnext",                      // Module dynamique
	  "moduleResolution": "node",              // Résolution des modules comme en Node.js
	  "strict": true,                          // Mode strict pour détecter plus d'erreurs
	  "esModuleInterop": true,                 // Permet d'importer des modules CommonJS
	  "skipLibCheck": true,                    // Ne pas vérifier les types des fichiers de déclaration
	  "outDir": "./dist",                        // Dossier de sortie des fichiers compilés (dossier "js" au même niveau que "typescript")
	  "rootDir": "./assets/typescript",        // Dossier source pour les fichiers TS
	  "allowJs": true,                         // Permet de traiter les fichiers JS
	  "jsx": "preserve",                       // Gère JSX si tu veux l'utiliser
	  "resolveJsonModule": true,               // Permet d'importer des fichiers JSON
	  "lib": ["dom", "esnext"]
	},
	"include": [
	  "./assets/typescript/**/*.ts"            // Inclut tous les fichiers TS dans le dossier "typescript" et ses sous-dossiers
	],
	"exclude": [
	  "../node_modules"
	]
  }
  